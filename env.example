# Redis 연결 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 암호화 설정
CRYPTO_KEY=your-secure-encryption-key-here-32-chars
CRYPTO_ALGORITHM=aes-256-cbc
CRYPTO_IV=your-16-byte-iv-here
CRYPTO_SALT=your-random-salt-here-32-chars

# 작업 큐 설정
QUEUE_NAME=customer-encryption
BATCH_SIZE=100
MAX_CONCURRENCY=4
CPU_LIMIT_PERCENT=50

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=logs/encryption.log

# 모니터링 설정
ENABLE_MONITORING=true
METRICS_PORT=3001
